@page "/movieoverview"

<h1 class="page-title">All Movies</h1>

@if (Movies == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Director</th>
                <th>Date Released</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Movies)
            {
                <tr>
                    <td></td>
                    <td>@movie.Title</td>
                    <td>@movie.Director</td>
                    <td>@movie.DateReleased.ToShortDateString()</td>
                    <td>
                        <a href="@($"moviedetail/{movie.MovieId}")" class="btn btn-primary table-btn">
                            Detail
                        </a>
                        <a href="@($"movieedit/{movie.MovieId}")" class="btn btn-primary table-btn">
                            Edit
                            @*<i class="fas fa-edit"></i>*@
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}